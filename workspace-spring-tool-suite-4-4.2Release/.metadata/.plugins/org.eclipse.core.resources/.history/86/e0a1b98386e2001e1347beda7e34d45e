package com.jpa.rest.api.service;

import java.util.ArrayList;
import java.util.Collection;
import java.util.Iterator;
import java.util.List;
import java.util.stream.Collector;
import java.util.stream.Collectors;

import org.springframework.stereotype.Service;

import com.jpa.rest.api.entities.Course;

@Service
public class CourseServiceImpl implements CoursesService{

	
	List<Course> list;
	
	public CourseServiceImpl() {
		
		this.list = new ArrayList<>();
		this.list.add(new Course(145, "Java Core  Course", "this  course contains basis of java"));
		this.list.add(new Course(146, "Spring Boot  Course", "Creating Rest api usong Spring Boot"));
		
		
	}
	
	@Override
	public List<Course> getCourse() {

		return this.list;
	}

	@Override
	public Course getCourse(Long courseId) {

		Course c = null;
		
		for(Course course:this.list) {
			if(course.getId()==courseId) {
				c= course;
				break;
			}
		}
		return c;
	}

	@Override
	public Course addCourse(Course addCourse) {
		this.list.add(addCourse);
		return addCourse;
	}

	@Override
	public Course updateCourse(Course updateCourse) {
		
		Iterator<Course> it = this.list.iterator();
		while (it.hasNext()){
			Course c =(Course) it.next();
		if ( c!= null && c.getId()==updateCourse.getId()){
		int i = this.list.indexOf(c);	
		this.list.set( i, updateCourse);
		}
		}
		return updateCourse;
	}

	@Override
	public void delete(Long courseId) {
		
	//	list = this.list.stream().filter(e->e.getId()!=courseId).collect(Collectors.toList());
	// Above line will work inisted of below all code.... try it later
		Course c = null;
		Iterator<Course> it = this.list.iterator();
		while (it.hasNext()){
			c =(Course) it.next();
			Long j = (Long)c.getId();
		if ( c!= null && j ==courseId){
			this.list.remove(this.list.indexOf(c));
		}
		}
		
	}
	
	
}
